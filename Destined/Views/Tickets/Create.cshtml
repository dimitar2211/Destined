@model Destined.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<style>
    body {
        background: #ececec;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .ticket-wrapper {
        max-width: 1000px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #222;
        font-weight: 700;
        letter-spacing: 1.2px;
    }

    form {
        user-select: none;
    }

    .real-ticket {
        display: flex;
        background: linear-gradient(145deg, #fafafa, #e6e6e6);
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15), inset 0 0 8px rgba(255,255,255,0.7);
        /* overflow: hidden; Removed to allow dropdown to expand outside */
        cursor: default;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1.5px solid #bbb;
        position: relative;
        font-weight: 600;
    }

        .real-ticket:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 30px rgba(0,0,0,0.3), inset 0 0 10px rgba(255,255,255,0.9);
            border-color: #4caf50;
        }

    .ticket-left, .ticket-right {
        padding: 25px 30px;
        flex: 1;
        position: relative;
        z-index: 10;
    }

    .ticket-left {
        background: #e0f2f1;
        border-radius: 15px 0 0 15px; /* Added to maintain rounded corners without overflow:hidden */
        border-right: 1.5px dashed #999;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

        .ticket-left label {
            display: flex;
            flex-direction: column;
            margin-bottom: 18px;
            font-weight: 700;
            font-size: 1.1rem;
            color: #00796b;
        }

            .ticket-left label strong {
                margin-bottom: 6px;
                color: #00796b;
                text-shadow: 0 1px 1px #a0d4cf;
                letter-spacing: 1.2px;
            }

    input.fake-input {
        background: transparent;
        border: none;
        border-bottom: 1.5px dashed #004d40;
        color: #004d40;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 6px 4px;
        transition: border-color 0.3s ease;
        max-width: 100%;
    }

        input.fake-input::placeholder {
            color: #00796b88;
        }

        input.fake-input:focus {
            outline: none;
            border-color: #4caf50;
            background: transparent;
        }

    input.small-input {
        max-width: 150px;
        font-size: 1.1rem;
        text-align: left;
    }

    .ticket-left .from-to-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
    }

        .ticket-left .from-to-wrapper label {
            flex: 1;
            margin-bottom: 0;
        }

    .ticket-left .arrow {
        font-size: 2.8rem;
        color: #00796b;
        user-select: none;
        font-weight: 700;
        text-shadow: 0 1px 1px #a0d4cf;
        line-height: 1;
        display: flex;
        align-items: center;
    }

    .ticket-center-wrapper {
        width: 30px;
        overflow: hidden;
        position: relative;
    }

    .ticket-center {
        width: 30px;
        height: 100%;
        background: repeating-linear-gradient( to bottom, transparent, transparent 8px, #999 8px, #999 10px );
        position: relative;
    }

        .ticket-center::before,
        .ticket-center::after {
            content: "";
            position: absolute;
            width: 30px;
            height: 30px;
            background: #ececec;
            border-radius: 50%;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: inset 3px 3px 5px rgba(255,255,255,0.9), inset -3px -3px 5px rgba(0,0,0,0.15);
            z-index: 11;
        }

        .ticket-center::before {
            top: -15px;
        }

        .ticket-center::after {
            bottom: -15px;
        }

    .ticket-right {
        background: #fff;
        box-shadow: inset 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-left: 1.5px dashed #999;
        border-radius: 0 15px 15px 0; /* Added to maintain rounded corners without overflow:hidden */
    }

    .barcode {
        width: 100%;
        height: 60px;
        background: repeating-linear-gradient( to right, #000, #000 3px, #fff 3px, #fff 6px, #000 6px, #000 9px, #fff 9px, #fff 12px, #000 12px, #000 15px, #fff 15px, #fff 18px );
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        margin-bottom: 18px;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding-bottom: 10px;
    }

    .btn-create {
        background: #4caf50;
        color: white;
        padding: 14px 36px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 6px 12px rgba(76,175,80,0.6);
        transition: background 0.3s ease, transform 0.2s ease;
        border: none;
        cursor: pointer;
        user-select: none;
    }

        .btn-create:hover {
            background: #388e3c;
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(56,142,60,0.8);
        }

    /* Custom Dropdown Styles */
    .dropdown-container {
        position: relative;
        width: 100%;
        margin-bottom: 20px;
    }

    .dropdown-search {
        width: 100%;
        margin-bottom: 5px;
    }

    .dropdown-list {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #ccc;
        border-radius: 4px;
        max-height: 220px; /* Adjusted to show approx 5 items (5 * ~40px) */
        overflow-y: auto;
        z-index: 100;
        display: none;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .dropdown-item {
        padding: 8px 12px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .dropdown-item:hover {
        background: #e0f2f1;
        color: #00796b;
    }
</style>

<div class="ticket-wrapper">
    <h1 class="page-title">Нов билет</h1>

    <form method="post" asp-action="Create">
        <div class="real-ticket">
            <div class="ticket-left">
                <div class="from-to-wrapper">
                    <label>
                        <strong>От:</strong>
                        <input asp-for="From" class="fake-input" placeholder="Град на тръгване" maxlength="22" required />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </label>
                    <div class="arrow">→</div>
                    <label>
                        <strong>До:</strong>
                        <input asp-for="To" class="fake-input" placeholder="Дестинация" maxlength="22" required />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </label>
                </div>
                <label>
                    <strong>Дата и час:</strong>
                    <input asp-for="DepartureTime" type="datetime-local" class="fake-input small-input" required />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </label>
                <label>
                    <strong>Пътници:</strong>
                    <input asp-for="NumberOfPassengers" class="fake-input small-input" min="1" value="1" required />
                    <span asp-validation-for="NumberOfPassengers" class="text-danger"></span>
                </label>
                <div class="dropdown-container">
                    <label>
                        <strong>Държава:</strong>
                        <input type="text" id="countrySearch" class="fake-input dropdown-search" placeholder="Търси държава..." autocomplete="off">
                        <input asp-for="Country" type="hidden" id="selectedCountry" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </label>
                    <div id="countryList" class="dropdown-list">
                        <!-- Countries will be populated here -->
                    </div>
                </div>
            </div>

            <div class="ticket-center-wrapper">
                <div class="ticket-center"></div>
            </div>

            <div class="ticket-right">
                <div class="barcode"></div>
                <div class="actions">
                    <button type="submit" class="btn-create">Създай билет</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const maxLength = 22;
            const inputs = document.querySelectorAll('input[asp-for="From"], input[asp-for="To"]');

            inputs.forEach(input => {
                input.addEventListener('input', () => {
                    if (input.value.length > maxLength) {
                        input.value = input.value.slice(0, maxLength);
                    }
                });
            });

            // Country Dropdown Logic
            const countries = [
                // Европа
                "Албания","Андора","Австрия","Беларус","Белгия","Босна и Херцеговина","България",
                "Ватикана","Великобритания","Германия","Гърция","Дания","Естония","Ирландия",
                "Исландия","Испания","Италия","Кипър","Латвия","Литва","Лихтенщайн","Люксембург",
                "Малта","Молдова","Монако","Нидерландия","Норвегия","Полша","Португалия",
                "Румъния","Сан Марино","Северна Македония","Словакия","Словения","Сърбия",
                "Украйна","Унгария","Финландия","Франция","Хърватия","Черна гора","Чехия",
                "Швейцария","Швеция",

                // Азия
                "Афганистан","Армения","Азербайджан","Бангладеш","Бахрейн","Бруней","Бутан",
                "Виетнам","Грузия","Израел","Индия","Индонезия","Ирак","Иран","Йордания",
                "Казахстан","Камбоджа","Катар","Киргизстан","Китай","Кувейт","Лаос","Ливан",
                "Малайзия","Малдиви","Монголия","Мианмар","Непал","ОАЕ","Оман","Пакистан",
                "Саудитска Арабия","Северна Корея","Сингапур","Сирия","Таджикистан","Тайланд",
                "Туркменистан","Турция","Узбекистан","Филипини","Шри Ланка","Южна Корея",
                "Япония","Палестина","Тимор-Лесте",

                // Африка
                "Алжир","Ангола","Бенин","Ботсвана","Буркина Фасо","Бурунди","Габон","Гамбия",
                "Гана","Гвинея","Гвинея-Бисау","Джибути","Египет","Екваториална Гвинея",
                "Еритрея","Есватини","Етиопия","Замбия","Зимбабве","Кабо Верде","Камерун",
                "Кения","Коморски острови","Конго","ДР Конго","Кот д’Ивоар","Лесото","Либерия",
                "Либия","Мадагаскар","Малави","Мали","Мароко","Мавритания","Мавриций",
                "Мозамбик","Намибия","Нигер","Нигерия","Руанда","Сао Томе и Принсипи",
                "Сейшели","Сенегал","Сиера Леоне","Сомалия","Судан","Южен Судан","Танзания",
                "Того","Тунис","Уганда","Централноафриканска република","Чад","ЮАР",

                // Северна и Централна Америка
                "Антигуа и Барбуда","Бахами","Барбадос","Белиз","Гватемала","Доминика",
                "Доминиканска република","Канада","Коста Рика","Куба","Мексико","Никарагуа",
                "Панама","Салвадор","САЩ","Сейнт Китс и Невис","Сейнт Лусия",
                "Сейнт Винсент и Гренадини","Тринидад и Тобаго","Хаити","Хондурас","Ямайка",

                // Южна Америка
                "Аржентина","Боливия","Бразилия","Венецуела","Гаяна","Колумбия","Парагвай",
                "Перу","Суринам","Уругвай","Чили","Еквадор",

                // Океания
                "Австралия","Вануату","Кирибати","Маршалови острови","Микронезия","Науру",
                "Нова Зеландия","Палау","Папуа Нова Гвинея","Самоа","Соломонови острови",
                "Тонга","Тувалу","Фиджи"
            ]; // Add more as needed

            const searchInput = document.getElementById('countrySearch');
            const countryList = document.getElementById('countryList');
            const hiddenInput = document.getElementById('selectedCountry');

            function populateList(filter = "") {
                countryList.innerHTML = '';
                const filtered = countries.filter(c => c.toLowerCase().includes(filter.toLowerCase()));
                
                if (filtered.length === 0) {
                    const noResult = document.createElement('div');
                    noResult.className = 'dropdown-item';
                    noResult.textContent = 'Няма резултати';
                    noResult.style.color = '#999';
                    noResult.style.cursor = 'default';
                    countryList.appendChild(noResult);
                    return;
                }

                filtered.forEach(country => {
                    const item = document.createElement('div');
                    item.className = 'dropdown-item';
                    item.textContent = country;
                    item.addEventListener('click', () => {
                        searchInput.value = country;
                        hiddenInput.value = country;
                        countryList.style.display = 'none';
                    });
                    countryList.appendChild(item);
                });
            }

            searchInput.addEventListener('input', () => {
                populateList(searchInput.value);
                countryList.style.display = 'block';
            });

            searchInput.addEventListener('focus', () => {
                populateList(searchInput.value);
                countryList.style.display = 'block';
            });

            document.addEventListener('click', (e) => {
                if (!searchInput.contains(e.target) && !countryList.contains(e.target)) {
                    countryList.style.display = 'none';
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}