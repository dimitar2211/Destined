@model Destined.Models.Ticket

@{
    ViewData["Title"] = "Изтриване на билет";
    ViewData["FullWidth"] = true;
}

<div style="position: relative; min-height: 100vh; overflow-x: hidden;">
    <partial name="_ThemeBackground" />

    <div id="page-content" style="position: relative; z-index: 10; padding: 40px 20px;">
        <div class="ticket-wrapper">
            <h1 class="page-title">Изтриване на билет</h1>
            <p style="text-align: center; color: #white; margin-bottom: 20px;">Сигурни ли сте, че искате да изтриете този билет?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="real-ticket">
                    <div class="ticket-left" style="background-color:@Model.LeftColor; --text-color:@Model.TextColor;">
                        <h2 style="color:@Model.TextColor;">@Model.From ➔ @Model.To</h2>
                        <p><strong style="color:@Model.TextColor;">Дата и час:</strong> <span style="color:@Model.TextColor;">@Model.DepartureTime.ToString("dd.MM.yyyy HH:mm")</span></p>
                        <p><strong style="color:@Model.TextColor;">Пътници:</strong> <span style="color:@Model.TextColor;">@Model.NumberOfPassengers</span></p>
                    </div>

                    <div class="ticket-center">
                        <div class="perforation"></div>
                    </div>

                    <div class="ticket-right" style="background-color:@Model.RightColor; color:@Model.TextColor;">
                        <div class="barcode"></div>
                        <div class="serial-number">ID: @Model.Id</div>
                        <div class="actions">
                            <button type="submit" class="btn btn-delete">Изтрий</button>
                            <a asp-action="Index" class="btn btn-journal">Отказ</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .ticket-wrapper {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #fff; /* White for dark themes */
        font-weight: 700;
        letter-spacing: 1.2px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    p { color: white; } /* Default text color for confirmation msg */

    .real-ticket {
        display: flex;
        background: linear-gradient(145deg, #fafafa, #e6e6e6);
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15), inset 0 0 8px rgba(255,255,255,0.7);
        overflow: hidden;
        cursor: default;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1.5px solid #bbb;
        position: relative;
        font-weight: 600;
        user-select: none;
    }

        .real-ticket:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 30px rgba(0,0,0,0.3), inset 0 0 10px rgba(255,255,255,0.9);
            border-color: #4caf50;
        }

    .ticket-left, .ticket-right {
        padding: 25px 30px;
        flex: 1;
        position: relative;
        z-index: 10;
    }

    .ticket-left {
        border-right: 1.5px dashed #999;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .ticket-left h2 {
            font-size: 2rem;
            margin-bottom: 12px;
            color: var(--text-color);
            text-shadow: 0 1px 1px #a0d4cf;
            letter-spacing: 1.2px;
        }

        .ticket-left p {
            font-size: 1.1rem;
            margin: 6px 0;
            color: var(--text-color);
        }

    .ticket-center {
        width: 30px;
        background: repeating-linear-gradient( to bottom, transparent, transparent 8px, #999 8px, #999 10px );
        position: relative;
    }

        .ticket-center::before,
        .ticket-center::after {
            content: "";
            position: absolute;
            width: 30px;
            height: 30px;
            background: #ececec;
            border-radius: 50%;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: inset 3px 3px 5px rgba(255,255,255,0.9), inset -3px -3px 5px rgba(0,0,0,0.15);
            z-index: 11;
        }

        .ticket-center::before {
            top: -15px;
        }

        .ticket-center::after {
            bottom: -15px;
        }

    .ticket-right {
        background: #fff;
        box-shadow: inset 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-left: 1.5px dashed #999;
    }

    .barcode {
        width: 100%;
        height: 60px;
        background: repeating-linear-gradient( to right, #000, #000 3px, #fff 3px, #fff 6px, #000 6px, #000 9px, #fff 9px, #fff 12px, #000 12px, #000 15px, #fff 15px, #fff 18px );
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        margin-bottom: 18px;
    }

    .serial-number {
        font-size: 0.9rem;
        font-family: 'Courier New', Courier, monospace;
        color: #666;
        margin-bottom: 15px;
        text-align: center;
        user-select: text;
    }

    .actions {
        display: flex;
        justify-content: space-around;
    }

    .btn {
        padding: 10px 22px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        user-select: none;
        border: none;
    }

    .btn-delete {
        background: #f44336;
        color: white;
    }

        .btn-delete:hover {
            background: #d32f2f;
            transform: translateY(-3px);
        }

    .btn-journal {
        background: transparent;
        color: black;
        box-shadow: none;
    }

        .btn-journal:hover {
            background: transparent;
            color: black;
            transform: translateY(-2px);
        }
</style>
