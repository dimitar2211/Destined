@model IEnumerable<Destined.Models.Ticket>

@{
    ViewData["Title"] = "Публични билети";
    var currentUserId = User.Identity != null && User.Identity.IsAuthenticated
        ? User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
        : null;
}

@functions {
    string ShortenUserName(string userName)
    {
        if (string.IsNullOrEmpty(userName))
            return "Непознат";

        int atIndex = userName.IndexOf('@');
        if (atIndex == -1)
            return userName;

        return userName.Substring(0, atIndex);
    }
}

<div class="ticket-wrapper">
    <h1 class="page-title">Публични билети</h1>

    <div style="text-align:center; margin-bottom:20px;">
        <form method="get" asp-action="PublicTickets" style="display:inline-block; margin-right: 15px;">
            <input type="text" name="searchCountry" value="@ViewData["SearchCountry"]" placeholder="Търси държава..." style="padding:8px 14px; border-radius:8px; border:1px solid #ccc; font-size:1rem; width: 250px;" />
            <button type="submit" style="padding:8px 14px; border-radius:8px; border:none; background:#2196f3; color:white; cursor:pointer; font-weight:bold;">Търси</button>
            @if (ViewData["SearchCountry"] != null)
            {
                <a href="@Url.Action("PublicTickets")" style="margin-left:5px; text-decoration:none; color:#f44336; font-weight:bold; font-size:1.2rem;" title="Изчисти търсенето">✖</a>
            }
        </form>

        <select id="sortSelect" style="padding:8px 14px; border-radius:8px; border:1px solid #ccc; font-size:1rem;">
            <option value="random">Всички разбъркани</option>
            <option value="mineFirst">Моите билети най-отгоре (другите разбъркани)</option>
            <option value="foreignOnly">Само чужди билети (разбъркани)</option>
        </select>
    </div>

    @if (!Model.Any())
    {
        <p class="no-tickets">Все още няма публични билети.</p>
    }
    else
    {
        foreach (var ticket in Model)
        {
            string textColor = string.IsNullOrEmpty(ticket.TextColor) ? "#000000" : ticket.TextColor;
            bool isMine = ticket.UserId == currentUserId;

            <div class="real-ticket" data-mine="@isMine.ToString().ToLower()">
                <div class="ticket-left" style="background:@ticket.LeftColor;">
                    <h2 style="color:@textColor">@ticket.From ➔ @ticket.To</h2>
                    <p style="color:@textColor"><strong>Дата и час:</strong> @ticket.DepartureTime.ToString("dd.MM.yyyy HH:mm")</p>
                    <p style="color:@textColor"><strong>Пътници:</strong> @ticket.NumberOfPassengers</p>
                    @if (!string.IsNullOrEmpty(ticket.Country))
                    {
                        <p style="color:@textColor"><strong>Държава:</strong> @ticket.Country</p>
                    }
                    <p style="color:@textColor"><strong>Собственик:</strong> @ShortenUserName(ticket.User?.UserName)</p>
                </div>
                <div class="ticket-center">
                    <div class="perforation"></div>
                </div>
                <div class="ticket-right" style="background:@ticket.RightColor;">
                    <div class="barcode"></div>
                    <div class="actions">
                        <a asp-controller="Journal" asp-action="Page"
                           asp-route-ticketId="@ticket.Id"
                           asp-route-page="1"
                           asp-route-readOnly="true"
                           class="btn btn-journal">Дневник (само за четене)</a>

                        <a asp-controller="Comments"
                           asp-action="Ticket"
                           asp-route-ticketId="@ticket.Id"
                           class="btn btn-detail">Коментари</a>

                    </div>
                </div>
            </div>
        }
    }
</div>
    
<style>
    body {
        background: #ececec;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .ticket-wrapper {
        max-width: 1000px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #222;
        font-weight: 700;
        letter-spacing: 1.2px;
    }

    .new-ticket {
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-create {
        background: #4caf50;
        color: white;
        padding: 14px 36px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 6px 12px rgba(76,175,80,0.6);
        transition: background 0.3s ease, transform 0.2s ease;
        display: inline-block;
    }

        .btn-create:hover {
            background: #388e3c;
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(56,142,60,0.8);
        }

    .real-ticket {
        display: flex;
        background: linear-gradient(145deg, #fafafa, #e6e6e6);
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15), inset 0 0 8px rgba(255,255,255,0.7);
        overflow: hidden;
        cursor: default;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1.5px solid #bbb;
        position: relative;
        font-weight: 600;
        user-select: none;
    }

        .real-ticket:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 30px rgba(0,0,0,0.3), inset 0 0 10px rgba(255,255,255,0.9);
            border-color: #4caf50;
        }

    .ticket-left, .ticket-right {
        padding: 25px 30px;
        flex: 1;
        position: relative;
        z-index: 10;
    }

    .ticket-left {
        background: #e0f2f1;
        border-right: 1.5px dashed #999;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .ticket-left h2 {
            font-size: 2rem;
            margin-bottom: 12px;
            color: #00796b;
            text-shadow: 0 1px 1px #a0d4cf;
            letter-spacing: 1.2px;
        }

        .ticket-left p {
            font-size: 1.1rem;
            color: #004d40;
            margin: 6px 0;
        }

    .ticket-center {
        width: 30px;
        background: repeating-linear-gradient( to bottom, transparent, transparent 8px, #999 8px, #999 10px );
        position: relative;
    }

        .ticket-center::before,
        .ticket-center::after {
            content: "";
            position: absolute;
            width: 30px;
            height: 30px;
            background: #ececec;
            border-radius: 50%;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: inset 3px 3px 5px rgba(255,255,255,0.9), inset -3px -3px 5px rgba(0,0,0,0.15);
            z-index: 11;
        }

        .ticket-center::before {
            top: -15px;
        }

        .ticket-center::after {
            bottom: -15px;
        }

    .ticket-right {
        background: #fff;
        box-shadow: inset 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-left: 1.5px dashed #999;
    }

    .barcode {
        width: 100%;
        height: 60px;
        background: repeating-linear-gradient( to right, #000, #000 3px, #fff 3px, #fff 6px, #000 6px, #000 9px, #fff 9px, #fff 12px, #000 12px, #000 15px, #fff 15px, #fff 18px );
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        margin-bottom: 18px;
    }

    .serial-number {
        font-size: 0.9rem;
        font-family: 'Courier New', Courier, monospace;
        color: #666;
        margin-bottom: 15px;
        text-align: center;
        user-select: text;
    }

    .actions {
        display: flex;
        justify-content: space-around;
    }

    .btn {
        padding: 10px 22px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        user-select: none;
    }

    .btn-detail {
        background: #2196f3;
        color: white;
        border: none;
    }

    .btn-edit {
        background: #ff9800;
        color: white;
        border: none;
    }

    .btn-delete {
        background: #f44336;
        color: white;
        border: none;
    }

    .btn-detail:hover {
        background: #1976d2;
        transform: translateY(-3px);
    }

    .btn-edit:hover {
        background: #ef6c00;
        transform: translateY(-3px);
    }

    .btn-delete:hover {
        background: #d32f2f;
        transform: translateY(-3px);
    }

    .no-tickets {
        text-align: center;
        font-size: 1.3rem;
        color: #777;
        margin-top: 40px;
    }
</style>

<script>
    function shuffle(arr) {
        for (let i = arr.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [arr[i], arr[j]] = [arr[j], arr[i]];
        }
        return arr;
    }

    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById('sortSelect');
        const container = document.querySelector('.ticket-wrapper');
        const tickets = Array.from(document.querySelectorAll('.real-ticket'));

        const userId = "@currentUserId";
        const storageKey = userId && userId !== ""
            ? `ticketSortMode_user_${userId}`
            : "ticketSortMode_guest";

        const savedMode = localStorage.getItem(storageKey) || 'random';
        select.value = savedMode;

        select.addEventListener('change', () => {
            const mode = select.value;
            localStorage.setItem(storageKey, mode);
            applySort(mode);
        });

        applySort(savedMode);

        function applySort(mode) {
            const mine = shuffle(tickets.filter(t => t.dataset.mine === "true"));
            const others = shuffle(tickets.filter(t => t.dataset.mine === "false"));

            tickets.forEach(t => t.remove());

            if (mode === "mineFirst") {
                mine.forEach(t => container.appendChild(t));
                others.forEach(t => container.appendChild(t));
            }
            else if (mode === "foreignOnly") {
                const foreignOnly = shuffle(others);
                foreignOnly.forEach(t => container.appendChild(t));
            }
            else {
                const mixed = shuffle([...mine, ...others]);
                mixed.forEach(t => container.appendChild(t));
            }
        }
    });
</script>