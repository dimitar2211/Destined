@{
    ViewData["Title"] = "Начало";
    ViewData["FullWidth"] = true;
}

<div class="space-background">
    <div class="stars"></div>
    <div class="twinkling"></div>
    
    <div class="hero-container">
        <div class="hero-content">
            <div class="badge-new">✨ Твоята вселена от спомени</div>
            <h1 class="hero-title">Some stories are <span class="gradient-text">Destined</span> to be told</h1>
            <p class="hero-subtitle">
                Записвай мигове, които остават вечни. Твоят личен дневник за емоции, пътешествия и истории, които си струва да се помнят.
            </p>
            
            <div class="cta-group">
                <a href="/Tickets/Create" class="btn-primary-glow">Създай билет</a>
                <a href="/Tickets/Index" class="btn-secondary-glass">Моите билети</a>
                @if (User.IsInRole("Admin"))
                {
                    <a href="/Reports/Index" class="btn-secondary-glass" style="border-color: #e53935; color: #ff8a80;">Admin Panel</a>
                }
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">📸</div>
                    <h3>Споделяй мигове</h3>
                    <p>Запази снимки от любимите си места.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">📝</div>
                    <h3>Пиши история</h3>
                    <p>Води личен дневник на преживяванията.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">🌍</div>
                    <h3>Обиколи света</h3>
                    <p>Организирай всичко по държави и дати.</p>
                </div>
            </div>
        </div>

        <div class="hero-visual">
            <div class="globe-floater">
                <div id="globe-container"></div>
                <div class="orbit-circle"></div>
                <div class="floating-card c1">
                    <span>❤️</span> Любов
                </div>
                <div class="floating-card c2">
                    <span>✈️</span> Пътуване
                </div>
                <div class="floating-card c3">
                    <span>🎉</span> Емоция
                </div>
            </div>
            <p class="quote-text">„Спомените са безценни — пази ги с любов.“</p>
        </div>
    </div>
</div>

<style>
    /* Reset & Fonts */
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700;900&display=swap');

    body {
        margin: 0;
        padding: 0;
        background: #0f172a; /* Fallback */
        font-family: 'Outfit', sans-serif;
        color: white;
        overflow-x: hidden;
    }

    /* Animated Background */
    .space-background {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(to bottom, #050a10 0%, #0f172a 100%);
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .stars {
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: transparent url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/stars.png') repeat top center;
        z-index: 0;
    }

    .twinkling {
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: transparent url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/twinkling.png') repeat top center;
        z-index: 1;
        animation: move-twinkling 200s linear infinite;
        opacity: 0.5;
    }

    @@keyframes move-twinkling {
        from {background-position:0 0;}
        to {background-position:-10000px 5000px;}
    }

    /* Layout */
    .hero-container {
        position: relative;
        z-index: 10;
        max-width: 1400px;
        width: 100%;
        padding: 40px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 60px;
        flex-wrap: wrap;
    }

    /* Left Content */
    .hero-content {
        flex: 1;
        max-width: 650px;
    }

    .badge-new {
        display: inline-block;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        color: #fbbf24;
        border: 1px solid rgba(251, 191, 36, 0.3);
        margin-bottom: 20px;
        animation: fadeInDown 0.8s ease-out;
    }

    .hero-title {
        font-size: 5rem;
        line-height: 1.1;
        font-weight: 900;
        margin-bottom: 25px;
        animation: fadeInLeft 1s ease-out;
    }

    .gradient-text {
        background: linear-gradient(to right, #4facfe 0%, #00f2fe 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 30px rgba(0, 242, 254, 0.3);
    }

    .hero-subtitle {
        font-size: 1.3rem;
        color: #cbd5e1;
        line-height: 1.7;
        margin-bottom: 40px;
        max-width: 90%;
        animation: fadeInLeft 1.2s ease-out;
    }

    /* Buttons */
    .cta-group {
        display: flex;
        gap: 20px;
        margin-bottom: 50px;
        animation: fadeInUp 1.4s ease-out;
    }

    .btn-primary-glow {
        background: linear-gradient(45deg, #2563eb, #3b82f6);
        color: white;
        padding: 16px 32px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 0 20px rgba(37, 99, 235, 0.5);
        border: 2px solid transparent;
    }

    .btn-primary-glow:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 0 40px rgba(37, 99, 235, 0.8);
        border-color: #60a5fa;
    }

    .btn-secondary-glass {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        color: white;
        padding: 16px 32px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .btn-secondary-glass:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: white;
        transform: translateY(-5px);
    }

    /* Feature Cards */
    .features-grid {
        display: flex;
        gap: 20px;
        animation: fadeInUp 1.6s ease-out;
    }

    .feature-card {
        background: rgba(30, 41, 59, 0.6);
        backdrop-filter: blur(12px);
        padding: 20px;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        flex: 1;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        background: rgba(30, 41, 59, 0.8);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .feature-icon {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .feature-card h3 {
        font-size: 1.1rem;
        margin: 0 0 5px 0;
        color: #f1f5f9;
    }

    .feature-card p {
        font-size: 0.9rem;
        margin: 0;
        color: #94a3b8;
    }

    /* Right Visual */
    .hero-visual {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        animation: zoomIn 1.5s ease-out;
    }

    .globe-floater {
        position: relative;
        width: 500px;
        height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #globe-container {
        width: 450px;
        height: 450px;
        z-index: 2;
        filter: drop-shadow(0 0 50px rgba(79, 172, 254, 0.4));
        animation: float-globe 6s ease-in-out infinite;
    }

    @@keyframes float-globe {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    .quote-text {
        margin-top: -20px;
        font-size: 1.2rem;
        font-style: italic;
        color: #94a3b8;
        background: rgba(15, 23, 42, 0.8);
        padding: 10px 20px;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.1);
        z-index: 5;
    }

    /* Floating Decor Elements */
    .floating-card {
        position: absolute;
        background: rgba(255, 255, 255, 0.95);
        color: #0f172a;
        padding: 12px 20px;
        border-radius: 12px;
        font-weight: 700;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        gap: 10px;
        z-index: 10;
        font-size: 0.9rem;
        animation: float-card 4s ease-in-out infinite;
    }

    .c1 { top: 20%; left: 0; animation-delay: 0s; transform: rotate(-10deg); }
    .c2 { bottom: 15%; right: 0; animation-delay: 1.5s; transform: rotate(5deg); }
    .c3 { top: 10%; right: 5%; animation-delay: 2.5s; transform: rotate(10deg); }

    @@keyframes float-card {
        0%, 100% { transform: translateY(0) rotate(var(--r, 0deg)); }
        50% { transform: translateY(-15px) rotate(var(--r, 0deg)); }
    }

    /* Animations */
    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    @@keyframes fadeInLeft {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }
    @@keyframes zoomIn {
        from { opacity: 0; transform: scale(0.8); }
        to { opacity: 1; transform: scale(1); }
    }

    /* Responsive */
    @@media (max-width: 1100px) {
        .hero-container {
            flex-direction: column;
            text-align: center;
            gap: 40px;
        }

        .hero-title { font-size: 3.5rem; }
        .hero-subtitle { margin: 0 auto 40px auto; }
        .cta-group { justify-content: center; }
        .features-grid { justify-content: center; }
        
        .globe-floater { width: 350px; height: 350px; margin-top: 20px; }
        #globe-container { width: 350px; height: 350px; }
        .floating-card { display: none; } /* Hide clutter on smaller screens */
    }

    @@media (max-width: 480px) {
        .hero-title { font-size: 2.5rem; }
        .features-grid { flex-direction: column; }
        #globe-container { width: 280px; height: 280px; }
        .globe-floater { width: 280px; height: 280px; }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/three@0.151.3/build/three.min.js"></script>

<script>
    const container = document.getElementById('globe-container');
    const width = container.clientWidth;
    const height = container.clientHeight;

    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(45, width / height, 0.1, 1000);
    camera.position.z = 2.8;

    const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
    renderer.setSize(width, height);
    renderer.setPixelRatio(window.devicePixelRatio);
    container.appendChild(renderer.domElement);

    // Earth
    const geometry = new THREE.SphereGeometry(1, 64, 64);
    const textureLoader = new THREE.TextureLoader();
    const earthTexture = textureLoader.load('https://cdn.jsdelivr.net/gh/jeromeetienne/threex.planets@master/images/earthmap1k.jpg');
    // Bump map for 3D feel
    const bumpMap = textureLoader.load('https://cdn.jsdelivr.net/gh/jeromeetienne/threex.planets@master/images/earthbump1k.jpg');
    const specularMap = textureLoader.load('https://cdn.jsdelivr.net/gh/jeromeetienne/threex.planets@master/images/earthspec1k.jpg');

    const material = new THREE.MeshPhongMaterial({
        map: earthTexture,
        bumpMap: bumpMap,
        bumpScale: 0.05,
        specularMap: specularMap,
        specular: new THREE.Color('grey')
    });

    const globe = new THREE.Mesh(geometry, material);
    scene.add(globe);

    // Lights
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.6); // Slightly softer ambient
    scene.add(ambientLight);

    const directionalLight = new THREE.DirectionalLight(0xffffff, 1);
    directionalLight.position.set(5, 3, 5);
    scene.add(directionalLight);

    // Add a blue rim light for space effect
    const rimLight = new THREE.SpotLight(0x4facfe, 5);
    rimLight.position.set(-5, 0, 2);
    rimLight.lookAt(0,0,0);
    scene.add(rimLight);

    function animate() {
        requestAnimationFrame(animate);
        globe.rotation.y += 0.002; // Slow rotation
        renderer.render(scene, camera);
    }

    animate();

    // Handle Resize
    window.addEventListener('resize', () => {
        const newWidth = container.clientWidth;
        const newHeight = container.clientHeight;
        renderer.setSize(newWidth, newHeight);
        camera.aspect = newWidth / newHeight;
        camera.updateProjectionMatrix();
    });
</script>
