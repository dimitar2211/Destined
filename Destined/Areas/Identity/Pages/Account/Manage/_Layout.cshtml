@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="passport-sheet">
    <div class="passport-inner">
        <div class="passport-left">
            <div class="portrait-frame">
                <div class="portrait-placeholder">
                    <span>PHOTO</span>

                    <div class="stamp-inside-wrap" aria-hidden="true">
                        <svg class="stamp" viewBox="0 0 240 240" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Decorative stamp">
                            <defs>
                                <filter id="roughEdge" x="-20%" y="-20%" width="140%" height="140%">
                                    <feTurbulence baseFrequency="0.6" numOctaves="2" result="turb" />
                                    <feDisplacementMap in="SourceGraphic" in2="turb" scale="4" xChannelSelector="R" yChannelSelector="G" />
                                </filter>
                            </defs>
                            <g filter="url(#roughEdge)">
                                <circle cx="120" cy="120" r="92" fill="none" stroke="#0b5ed7" stroke-width="6" />
                            </g>
                            <circle cx="120" cy="120" r="64" fill="none" stroke="#0b5ed7" stroke-width="3" stroke-dasharray="6 5" opacity="0.92" />
                            <text x="120" y="118" font-size="15" text-anchor="middle" fill="#0b5ed7" font-family="Segoe UI, Arial" font-weight="800" letter-spacing="1.4">
                                ACCOUNT
                            </text>
                            <text x="120" y="138" font-size="13" text-anchor="middle" fill="#0b5ed7" font-family="Segoe UI, Arial" font-weight="700" letter-spacing="1.2">
                                MANAGER
                            </text>
                        </svg>
                    </div>
                </div>
                <div class="portrait-caption">Вашият профил</div>
            </div>
        </div>

        <div class="passport-right">
            <div class="doc-header">
                <div class="doc-title">Manage your account</div>
                <div class="doc-sub">Change your account settings</div>
            </div>

            <div class="passport-content">
                <div class="manage-layout">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <partial name="_ManageNav" />
                        </div>
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

<style>
.passport-sheet {
    max-width: 960px;
    margin: 40px auto;
    padding: 28px;
    background: linear-gradient(180deg, #f7f3ea 0%, #efe6d6 100%);
    border: 1px solid rgba(30,20,10,0.12);
    box-shadow: 0 12px 36px rgba(0,0,0,0.25);
    font-family: "Segoe UI", Tahoma, Arial, sans-serif;
    color: #2e2a25;
    border-radius: 8px;
}

.passport-inner {
    display: flex;
    gap: 22px;
}

.passport-left {
    width: 38%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.portrait-frame {
    width: 100%;
    text-align: center;
}

.portrait-placeholder {
    position: relative;
    width: 100%;
    height: 240px;
    background: linear-gradient(180deg, #eef3f5 0%, #e6eded 100%);
    border: 3px solid rgba(20,20,20,0.06);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b6b6b;
    font-weight: 700;
    letter-spacing: 2px;
    box-shadow: inset 0 2px 6px rgba(0,0,0,0.04);
}

.portrait-placeholder::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image:
        linear-gradient(rgba(0,0,0,0.015) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0,0,0,0.01) 1px, transparent 1px);
    background-size: 100% 6px, 6px 100%;
    mix-blend-mode: multiply;
    pointer-events: none;
}

.portrait-caption {
    margin-top: 6px;
    font-size: 0.85rem;
    color: #4b4238;
}

.stamp-inside-wrap {
    position: absolute;
    bottom: -80px;
    right: -80px;
    width: 160px;
    height: 160px;
    transform: rotate(-12deg);
    pointer-events: none;
    z-index: 5;
}

.stamp {
    width: 160px;
    height: 160px;
    opacity: 0.95;
    mix-blend-mode: multiply;
    filter: drop-shadow(0 1px 0 rgba(0,0,0,0.03));
}

.passport-right {
    width: 62%;
}

.doc-header {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 14px;
}

.doc-title {
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: 1px;
    color: #3a2f27;
}

.doc-sub {
    font-size: 0.9rem;
    color: #645548;
}

.manage-layout .col-md-3 {
    border-right: 1px dashed rgba(60,50,40,0.2);
}

#manage-nav {
    padding-right: 10px;
}

#manage-nav a.nav-link {
    color: #3a2f27;
    padding: 6px 0;
    display: block;
    font-weight: 600;
    transition: color 0.2s;
}

#manage-nav a.nav-link.active {
    color: #0b5ed7;
}

#manage-nav a.nav-link:hover {
    color: #0b5ed7;
}

.passport-input {
    background: linear-gradient(180deg, #faf7f1 0%, #f3ebe0 100%);
    border: 1px solid rgba(90,70,55,0.12);
    color: #30261b;
    padding: 1rem .75rem;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.4);
    border-radius: 4px;
}

.passport-btn {
    background: #0d6efd;
    color: white;
    border: none;
    padding: 12px;
    font-weight: 700;
    border-radius: 6px;
    box-shadow: 0 4px 10px rgba(13,110,253,0.18);
    cursor: pointer;
}

.passport-btn:hover {
    transform: translateY(-1px);
}

@@media (max-width: 880px) {
    .passport-inner {
        flex-direction: column;
    }

    .passport-left, .passport-right {
        width: 100%;
    }

    .portrait-placeholder {
        height: 200px;
    }

    .stamp-inside-wrap {
        bottom: -60px;
        right: -60px;
        width: 140px;
        height: 140px;
    }
}
</style>
